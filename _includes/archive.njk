---
layout: content-page.njk
---
<header>
  <h1>Posts</h1>
</header>
<section class="main">
  <article class="body">
  {%- for post in collections.post | reverse -%}
    <article class="list">
      <header>
        <h1><a href="{{ post.url }}">{{ post.data.title }}</a></h1>
      </header>
      <section class="meta">
        <ul>
          <li class="time">
            <time>{{ post.data.date.toDateString() }}</time>
          </li>
        </ul>
      </section>
      <section class="excerpt">
        {{ post.data.excerpt }}
      </section>
    </article>
  {%- endfor -%}
  </article>
</section>