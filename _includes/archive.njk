---
layout: page.njk
---
<header>
  <h1>Posts</h1>
</header>

{%- for post in collections.post | reverse -%}
<article>
  <header>
    <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
  </header>
  <section class="meta">
    <ul>
      <li>
        <time>{{ post.data.date.toDateString() }}</time>
      </li>
    </ul>
  </section>
  <section>
    {{ post.data.excerpt }}
  </section>
</article>
{%- endfor -%}